<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xui_config_color_gray_5"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="50dp">

        <com.xuexiang.xui.widget.alpha.XUIAlphaImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/xui_config_color_transparent"
            android:src="@drawable/icon_avatar1" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            style="@style/Button.Primary.wrap"
            android:layout_marginTop="10dp"
            android:background="@drawable/xui_config_color_blue_btn_normal"
            android:text="点击确认" />

    </com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout>

    <com.xuexiang.xui.widget.alpha.XUIAlphaFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xui_config_color_red"
        android:clickable="true"
        android:focusable="true"
        android:padding="30dp">

        <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
            style="@style/TextStyle.Content"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:text="点击确认"
            android:textColor="@color/xui_config_color_white" />


    </com.xuexiang.xui.widget.alpha.XUIAlphaFrameLayout>

    <com.xuexiang.xui.widget.alpha.XUIAlphaRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xui_config_color_light_blue"
        android:clickable="true"
        android:focusable="true"
        android:padding="100dp"/>


</LinearLayout>