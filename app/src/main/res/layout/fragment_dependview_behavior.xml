<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/depend_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|start"
            android:background="@color/app_color_theme_1"
            android:gravity="center"
            android:text="Depend View"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="@dimen/spacing_24dp"
            android:background="@color/app_color_theme_7"
            android:gravity="center"
            android:text="Auto"
            android:textColor="@android:color/white"
            app:layout_behavior="com.xuexiang.xuidemo.widget.behavior.DependentBehavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>