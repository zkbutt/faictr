<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.flowlayout.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/btn_select"
            style="@style/SuperButton.Primary.wrap"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="选择图片" />

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/btn_brush"
            style="@style/SuperButton.Primary.wrap"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="画笔" />

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/btn_text"
            style="@style/SuperButton.Primary.wrap"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="文字" />

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/btn_rubber"
            style="@style/SuperButton.Primary.wrap"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="橡皮" />

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/btn_filter"
            style="@style/SuperButton.Primary.wrap"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="滤镜" />

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/btn_save"
            style="@style/SuperButton.Primary.wrap"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="保存" />

    </com.xuexiang.xui.widget.flowlayout.FlowLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xuexiang.xui.widget.imageview.edit.PhotoEditorView
            android:id="@+id/photo_editor_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:photo_src="@drawable/img_beautiful_scenery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.xuexiang.xui.widget.alpha.XUIAlphaImageView
                android:id="@+id/iv_undo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#99000000"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_undo" />

            <com.xuexiang.xui.widget.alpha.XUIAlphaImageView
                android:id="@+id/iv_redo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#99000000"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_redo" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>