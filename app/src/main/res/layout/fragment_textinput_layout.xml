<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_16"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:counterOverflowTextColor="@color/xui_config_color_waring"
        app:errorEnabled="true"
        app:errorTextColor="?xui_config_color_error_text"
        app:helperTextTextColor="@color/xui_config_color_black"
        app:hintTextColor="?colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_config_color_white"
            android:hint="@string/tip_please_input_phone_number"
            android:inputType="phone"
            android:paddingVertical="@dimen/config_margin_8dp"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_16"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="?colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_config_color_white"
            android:hint="@string/hint_please_input_password"
            android:inputType="textPassword"
            android:paddingVertical="@dimen/config_margin_8dp"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_24dp"
        android:text="@string/title_login" />

</LinearLayout>